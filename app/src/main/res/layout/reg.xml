<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zhuce"
    tools:context="com.androidNewLab.baiduMap.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_marginTop="210dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/use"/>
        <EditText
            android:layout_marginLeft="15dp"
            android:id="@+id/new_et_name"
            android:editable="true"
            android:background="@null"
            android:hint="请输入用户名   "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_marginTop="270dp"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/password"/>
        <EditText
            android:inputType="textPassword"
            android:layout_marginLeft="15dp"
            android:id="@+id/new_et_password"
            android:editable="true"
            android:background="@null"
            android:hint="请输入密码（6-12字母）   "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_marginTop="330dp"
        android:id="@+id/linearLayout3">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pass2"/>
        <EditText
            android:inputType="textPassword"
            android:layout_marginLeft="15dp"
            android:id="@+id/new_et_password2"
            android:editable="true"
            android:background="@null"
            android:hint="请确认密码             "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>



    </LinearLayout>


    <Button
        android:id="@+id/new_btn_reg"
        android:text="            注册           "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="31dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignStart="@+id/linearLayout3"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"/>





</RelativeLayout>
